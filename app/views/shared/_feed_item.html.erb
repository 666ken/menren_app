<ol class="posts">
  <% @feed_items.each do |feed_item| %>
    <li id="feed_item-<%= feed_item.id %>">
      <div class="user-feed_item-wrapper">
        <div class="profile-avatar">
          <% if feed_item.user.avatar? %>
            <%= image_tag feed_item.user.avatar.url, class: "rounded-circle" %>
          <% else %>
            <%= image_tag "no-image.png", class: "rounded-circle" %>
          <% end %>
        </div>
        <div class="title ml-3">
          <%= link_to feed_item.title, post_path(feed_item) , class: "text-dark font-weight-bold"%>
          <span class="timestamp font-small mt-1">
            投稿者:<%= link_to feed_item.user.name, user_path(feed_item.user) , class: "text-light"%>&nbsp;
            <%= time_ago_in_words(feed_item.created_at) %>前
          </span>
        </div>
      </div>
    </li>
  <% end %>
</ol>
<%= paginate @feed_items %>