<div class="py-5 mb-3">
  <h2 class="text-center mb-5">検索結果</h2>
  <div class="mx-auto w-75">
    <section class="posts-wrapper w-100">
      <% if @search_posts.any?%>
        <ol class="posts">
          <% @search_posts.each do |post| %>
            <li id="post-<%= post.id %>">
              <p class="title m-0"><%= link_to post.title, post_path(post) , class: "text-dark font-weight-bold"%></p>
              <span class="timestamp font-small">
                投稿 <%= time_ago_in_words(post.created_at) %> 前
              </span>
            </li>
          <% end %>
        </ol>
        <%= paginate @search_posts %>
      <% else %>
        <p class="text-center">当てはまるタイトルの投稿は見つかりませんでした。</p>
      <% end %>
    </section>
  </div>
</div>