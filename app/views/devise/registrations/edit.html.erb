<div class="container py-5">
  <h2 class="text-center mb-3">プロフィール編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="font-small w-75 mx-auto">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="field mx-auto w-75 mb-3">
      <%= f.label :name, class: "font-small" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %>
    </div>

    <div class="field mx-auto w-75 mb-3">
      <%= f.label :email, class: "font-small" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
    </div>

    <div class="field mx-auto w-75 mb-3">
      <%= f.label :password, class: "font-small" %> <i class="font-small">(パスワードを変更したい場合はこちらを入力してください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
      <% if @minimum_password_length %>
        <br />
        <em class="font-small">(最低<%= @minimum_password_length %>文字)</em>
      <% end %>
    </div>

    <div class="field mx-auto w-75 mb-3">
      <%= f.label :password_confirmation, class: "font-small" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
    </div>

    <div class="field mx-auto w-75 mb-3">
      <%= f.label :current_password, class: "font-small" %> <i class="font-small">(プロフィール情報を編集するには現在のパスワードを入力してください)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-100" %>
    </div>

    <div class="actions mx-auto w-75 mb-3">
      <%= f.submit "更新する", class: "bg-dark text-white border-0 button" %>
    </div>
  <% end %>

  <div class="link mx-auto w-75 mb-3">
    <%= link_to "アカウント削除はこちら", user_registration_path, class: "delete_account_link",method: :delete, data: {confirm: "本当に削除してよろしいですか？"} %>
  </div>
</div>
