<li id="comment-<%= comment.id %>" class="comment mt-4">
  <div>
    <div class="comment-wrapper mb-3">
      <div class="commet-person">
        <%= link_to comment.user.name, user_path(comment.user) %>
      </div>
      <div class="commnet-detail ml-auto font-small">
        <span class="mr-3"><%= time_ago_in_words(comment.created_at) %>前</span> 
        <%= link_to("削除する", comment, method: :delete, remote: true) if current_user == comment.user %>
      </div>
    </div>
    <p class="content mb-2"><%= comment.content %></p>
  </div>
</li>
