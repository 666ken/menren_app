<li id="user-<%= user.id %>">
  <div class="user-wrapper">
    <div class="profile-avatar">
      <% if user.avatar? %>
        <%= image_tag user.avatar.url, class: "rounded-circle" %>
      <% else %>
        <%= image_tag "no-image.png", class: "rounded-circle" %>
      <% end %>
    </div>
    <div class="title ml-3 pt-2">
      <%= link_to user.name, user_path(user) , class: "text-dark font-weight-bold"%>
    </div>
  </div>
</li>