<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <section class="profile">
        <p>＊これから実装：プロフィール画像</p>
        <p><%= @user.name %></p>
      </section>
      <section class="フォロー・フォロワー数表示">
        <p>＊これから実装：フォロー・フォロワー数</p>
      </section>
      <p>＊これから実装：フォローボタン</p>
      <%# プロフィール編集ページへのリンク %>
      <% if current_user?(@user) %>
        <%= link_to "profile edit", edit_user_registration_path, class: "btn btn-lg btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-8 py-5 mb-3">
      <h2 class="text-center mb-4">全ての投稿</h2>
      <div class="container">
        <div class="row mx-auto w-75">
          <% if @user.posts.any? %>
            <h5 class="mb-3 w-100">投稿数 （<%= @user.posts.count %>）</h5>
            <section class="posts-wrapper w-100">
              <ol class="posts">
                  <%= render @posts %>
              </ol>
              <%= paginate @posts %>
            </section>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>