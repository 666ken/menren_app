<% provide(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-lg-4 py-5">
      <section class="profile-wrapper w-75 mx-auto">
        <section class="profile mb-3">
          <% if @user.avatar? %>  <!-- アップロード画像がある場合に実行する -->
            <p>
              <%= image_tag @user.avatar.url, class: "rounded-circle" %><!-- userインスタンスの画像ファイルのURLを取得し表示 -->
            </p>
            <% end %>
          <h4>@<%= @user.name %></h4>
        </section>
        <section class="stats mb-3">
          <%= render 'shared/stats' %>
        </section>
        <%= render 'follow_form' if user_signed_in? %>
        <%# プロフィール編集ページへのリンク %>
        <section class="profile_edit_link">
          <% if current_user?(@user) %>
            <%= link_to "profile edit", edit_user_registration_path, class: "btn btn-lg bg-dark text-white px-5" %>
          <% end %>
        </section>
      </section>
    </div>
    <div class="col-lg-8 py-5 mb-3">
      <h2 class="text-center mb-4">投稿一覧</h2>
      <div class="container">
        <div class="row mx-auto w-75">
          <% if @user.posts.any? %>
            <h5 class="mb-3 w-100">投稿数 （<%= @user.posts.count %>）</h5>
            <section class="posts-wrapper w-100">
              <ol class="posts">
                  <%= render @posts %>
              </ol>
              <%= paginate @posts %>
            </section>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>